{
    "name": "directory",
    "description": "Active Directory server for centralized users and groups management. Use single password for all services.",
    "version": "1.1",
    "icon": "fa-group",
    "dependency": "monitoring",
    "substates": ["directory.directory", "openvpn"],
    "module" : "samba",
    "fields": [
            {"type": "text", "name": "domain", "label": "Domain-name"},
            {"type": "text", "name": "ip", "label": "IP address of DC"},
            {"type": "text", "name": "username", "label": "Username"},
            {"type": "password", "name": "password", "label": "Password"}
        ],
    "services": [
            {
            "tags": ["hostsvc", "web", "http"],
            "port": 0,
            "check_id": "ping",
            "check_name": "Ping Check",
            "interval": "30s",
            "timeout": "10s"},
            {
            "tags": ["hostsvc", "web", "http"],
            "port": 22,
            "check_id": "tcp",
            "check_name": "SSH Interface",
            "interval": "30s",
            "timeout": "10s"},
            {
            "tags": ["hostsvc", "web", "http"],
            "port": 445,
            "check_id": "tcp",
            "check_name": "SMB over TCP",
            "interval": "30s",
            "timeout": "10s"},
            {
            "tags": ["hostsvc", "web", "http"],
            "port": 389,
            "check_id": "tcp",
            "check_name": "LDAP",
            "interval": "30s",
            "timeout": "10s"},
            {
            "tags": ["hostsvc", "web", "http"],
            "port": 53,
            "check_id": "udp",
            "check_name": "DNS",
            "interval": "30s",
            "timeout": "10s"}
                         ],
    "path": "-", 
    "panels": {"admin": [{"key": "directory.users", "name": "Users"}, {"key": "directory.groups", "name": "Groups"}, {"key": "directory.dns", "name": "DNS entries"}, {"key": "directory.overview", "name": "Overview"}], "user": []}
}
