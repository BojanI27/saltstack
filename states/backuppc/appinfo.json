{
    "name": "backup",
    "description": "Create automatic daily and weekly backups of all critical data across the network.",
    "version": "1.1",
    "icon": "fa-database",
    "dependency": "monitoring",
    "substates" : ["backuppc"],
    "module" : "backuppc",
    "services": [
            {
            "tags": ["hostsvc", "web", "http"],
            "port": 0,
            "check_id": "ping",
            "check_name": "Ping Check",
            "interval": "30s",
            "timeout": "10s"},
            {
            "tags": ["hostsvc", "web", "http"],
            "port": 22,
            "check_id": "tcp",
            "check_name": "SSH Interface",
            "interval": "30s",
            "timeout": "10s"},
            {
            "tags": ["hostsvc", "web", "http"],
            "port": 80,
            "check_id": "tcp",
            "check_name": "Web Interface",
            "interval": "30s",
            "timeout": "10s"}
                         ],
    "path": "-",
    "panels": {"admin": [{"key": "backup.manage", "name": "Manage backups"}, {"key": "backup.browse", "name": "Browse backups"}], "user": []}
}
