{
    "name": "owncloud",
    "description": "Store your files, calendar events and contacts in a private dropbox. Access them from web, mobile or use a desktop sync software",
    "version": "1.1",
    "icon": "fa-cloud",
    "dependency": "directory,vpn",
    "substates": ["owncloud"], 
    "fields": [
            {"type": "text", "name": "ip", "label": "IP address of DC"},
            {"type": "text", "name": "username", "label": "Username"},
            {"type": "password", "name": "password", "label": "Password"}
        ],
    "services": [
            {
            "tags": ["hostsvc", "web", "http"],
            "port": 0,
            "check_id": "ping",
            "check_name": "Ping Check",
            "interval": "30s",
            "timeout": "10s"},
            {
            "tags": ["hostsvc", "web", "http"],
            "port": 22,
            "check_id": "tcp",
            "check_name": "SSH Interface",
            "interval": "30s",
            "timeout": "10s"},
            {
            "tags": ["hostsvc", "web", "http"],
            "port": 443,
            "check_id": "http",
            "check_name": "WebDAV and Web Interface",
            "interval": "30s",
            "timeout": "10s"}
                         ],    
    "path": "-"
}
